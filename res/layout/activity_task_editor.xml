<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <EditText
        android:id="@+id/edit_text_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_task_title"
        android:inputType="textCapSentences" />

    <EditText
        android:id="@+id/edit_text_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_task_title"
        android:hint="@string/hint_task_description"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/text_view_task_reminders_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_task_description"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:hint="@string/hint_task_reminders_label"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_view_task_reminder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_task_reminders_label"
        android:layout_alignLeft="@id/text_view_task_reminders_label"
        android:layout_marginTop="7dp"
        android:hint="@string/hint_task_reminder_time"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_view_task_reminder_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view_task_reminder_time"
        android:layout_alignBaseline="@id/text_view_task_reminder_time"
        android:layout_marginLeft="10dp"
        android:hint="@string/hint_task_reminder_date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edit_text_task_reminder_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_task_reminder_time"
        android:hint="@string/hint_task_reminder_location" />

</RelativeLayout>
